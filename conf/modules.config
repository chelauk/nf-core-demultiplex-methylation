/*
========================================================================================
    Config file for defining DSL2 per module options and publishing paths
========================================================================================
    Available keys to override module options:
        ext.args            = Additional arguments appended to command in module.
        ext.args2           = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3           = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix          = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    withName: FASTQC {
        ext.args   = '--quiet'
        publishDir = [
            path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/fastqc" },
            mode: params.publish_dir_mode,
            pattern: "*.{html,zip}"
        ]
    }

    withName: TRIMGALORE {
        ext.args = '--fastqc'
        publishDir = [
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/trimgalore" },
                mode: params.publish_dir_mode,
                pattern: "*.{html,zip}"
            ],
        ]
    }

    withName: SAMTOOLS_INDEX {
        publishDir = [
            path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/aligned" },
            mode: params.publish_dir_mode,
            pattern: '*ba{m,i}'
        ]
    }

    withName: BISMARK_ALIGN {
        ext.args   = { params.pcr ? '--non_directional' : '' }
        ext.prefix = { "${meta.id}" }
        publishDir = [
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/bismark_align" },
                mode: params.publish_dir_mode,
                pattern: '*{txt}'
            ]
        ]
    }

    withName: BISMARK_METHYLATED {
        ext.args = 'bismark_align_methylated_control'
        ext.prefix = { "${meta.id}_methylated_control" }
        publishDir = [
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/methylated_control" },
                mode: params.publish_dir_mode,
                pattern: '*{txt}'
            ]
        ]
    }

    withName: BISMARK_UNMETHYLATED {
        ext.args = 'bismark_align_unmethylated_control'
        ext.prefix = { "${meta.id}_unmethylated_control" }
        publishDir = [
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/unmethylated_control" },
                mode: params.publish_dir_mode,
                pattern: '*{txt}'
            ]
        ]
    }

    withName: BISMARK_METHYLATIONEXTRACTOR {
        publishDir =
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/methylation_extractor" },
                mode: params.publish_dir_mode,
                pattern: '*{gz,txt}'
            ]
    }

    withName: FILTER_BISMARK_MX {
        publishDir =
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/methylation_extractor" },
                mode: params.publish_dir_mode,
                pattern: '*{gz,txt}'
            ]
    }

    withName: BISMARK_CONVERSION {
        ext.args   = { params.pcr ? 'bs_conversion_pcr.R' : 'bs_conversion_assessment.R' }
        ext.prefix = { "${meta.id}_bs_conversion" }
        publishDir =
            [
                path: { "${params.outdir}/${meta.patient}/${meta.patient}_${meta.sample}/methyl_seq/reports/bismark_conversion" },
                mode: params.publish_dir_mode,
                pattern: '*pdf'
            ]
    }


    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }
    withName: MULTIQC {
        ext.args   = params.multiqc_title ? "--title \"$params.multiqc_title\"" : ''
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}
